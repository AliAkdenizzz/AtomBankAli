{
  "name": "atom-bank-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Atom Bank application",
  "main": "index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:unit": "jest tests/unit --detectOpenHandles",
    "test:integration": "jest tests/integration --detectOpenHandles",
    "test:security": "jest tests/security --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:verbose": "jest --verbose --detectOpenHandles",
    "test:ci": "jest --ci --coverage --detectOpenHandles --forceExit",
    
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:ui": "playwright test --ui",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:webkit": "playwright test --project=webkit",
    "e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "e2e:report": "playwright show-report",
    "e2e:codegen": "playwright codegen http://localhost:5000",
    
    "perf:load": "k6 run tests/performance/load-test.js",
    "perf:stress": "k6 run tests/performance/stress-test.js",
    "perf:load:50": "k6 run --vus 50 --duration 2m tests/performance/load-test.js",
    "perf:load:100": "k6 run --vus 100 --duration 2m tests/performance/load-test.js",
    "perf:load:200": "k6 run --vus 200 --duration 3m tests/performance/load-test.js",
    
    "test:all": "npm run test && npm run e2e",
    "test:full": "npm run test:coverage && npm run e2e && npm run perf:load",
    
    "report:coverage": "open coverage/lcov-report/index.html",
    "report:playwright": "open playwright-report/index.html",
    
    "prepare": "playwright install",
    "clean": "rm -rf coverage playwright-report test-results node_modules/.cache"
  },
  "keywords": [
    "testing",
    "jest",
    "playwright",
    "k6",
    "banking",
    "integration-tests",
    "e2e-tests",
    "performance-tests"
  ],
  "author": "Atom Bank Test Team",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.0",
    "mongoose": "^8.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
